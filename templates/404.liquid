<style>
  .page-404--title{
    font-size: 72px;
    margin: 0 0 15px 0;
  }
  .btn-404{
    padding: 10px 30px;
    margin-top: 15px;
  }
</style>
<section id="columns" class="columns-container page_404">
  <div class="container">
    <div class=" text-center">
      <div class="page-404">
        {% if settings.image_404 != blank %}
        <img class="lazyload" data-src="{{ settings.image_404 | img_url: '1920x' }}" alt="404 Image" />
        {% endif %}
        {% if settings.found_html != blank %}
        <h2 class="page-404--title" style="color:{{ settings.found_text_color }}">{{ settings.found_html }}</h2>
        {% endif %}
        {% if settings.sub_404 != blank %}
        <p class="page-404--sub">{{settings.sub_404}}</p>
        {% endif %}
        <div class="text-center btn_404">
          {% if settings.found_btnleft_text != blank %}
          <a href="{{ settings.found_btnleft_link }}" class="btn btn-theme gradient-theme btn-404">
            {% include 'icon-arrow-thin-left' %}
            {{ settings.found_btnleft_text }}
          </a>
          {% endif %}
        </div>                      	
      </div>
    </div>
  </div>
</section>